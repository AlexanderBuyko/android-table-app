<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Table.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Theme.Table.TextAppearance.Button</item>
        <item name="android:textColor">@color/primary_button_text</item>
        <item name="android:backgroundTint">@color/primary_button_bg</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="rippleColor">?attr/rippleColor</item>
    </style>

    <style name="Theme.Table.Widget.Button.Secondary">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">@color/secondary_button_text</item>
    </style>

    <style name="Theme.Table.Widget.Button.Progressable" parent="Widget.MaterialComponents.CardView">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:indeterminateTint">?attr/colorOnPrimary</item>
        <item name="cardBackgroundColor">@color/primary_button_bg</item>
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Theme.Table.TextAppearance.Button</item>
    </style>

    <style name="Theme.Table.Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/input_field_min_height</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textCursorDrawable">@drawable/app_cursor</item>
        <item name="android:textAppearance">@style/Theme.Table.TextAppearance.UI14R</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:textColorHint">@color/input_field_hint</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Table.Widget.TextInputLayout" parent="">
        <item name="boxBackgroundMode">none</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/Theme.Table.TextAppearance.UI12R</item>
        <item name="editTextColor">?attr/colorError</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Theme.Table.Widget.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Table.BottomSheet</item>
        <item name="backgroundTint">?attr/colorBackground</item>
    </style>
    
    <style name="Theme.Table.TextView.DateField" parent="">
        <item name="android:background">@drawable/date_field_background</item>
        <item name="android:drawableTint">@color/cod_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/Theme.Table.TextAppearance.UI14R</item>
    </style>

    <style name="Theme.Table.TextView.DateField.Day">
        <item name="android:drawableEnd">@drawable/ic_calendar</item>
    </style>

    <style name="Theme.Table.TextView.DateField.Hour">
        <item name="android:drawableEnd">@drawable/ic_stopwatch</item>
    </style>
</resources>