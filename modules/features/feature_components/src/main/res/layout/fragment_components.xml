<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLlComponentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_giant"
        android:gravity="center_horizontal"
        android:text="Hello Again!"
        android:textAppearance="@style/Theme.Ava.TextAppearance.UI30SB" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center_horizontal"
        android:text="Welcome back youâ€™ve been missed!"
        android:textAppearance="@style/Theme.Ava.TextAppearance.UI16L"
        android:textColor="@color/dove_gray" />

    <com.google.android.material.textfield.TextInputEditText
        style="@style/Theme.Table.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_huge"
        android:hint="Phone number" />

    <com.google.android.material.button.MaterialButton
        style="@style/Theme.Table.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_huge"
        android:text="Enabled primary button" />

    <com.google.android.material.button.MaterialButton
        style="@style/Theme.Table.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_normal"
        android:enabled="false"
        android:text="Disabled primary button" />

    <com.google.android.material.button.MaterialButton
        style="@style/Theme.Table.Widget.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_huge"
        android:text="Enabled secondary button" />

    <com.google.android.material.button.MaterialButton
        style="@style/Theme.Table.Widget.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_normal"
        android:enabled="false"
        android:text="Disabled secondary button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/margin_huge">

        <com.google.android.material.button.MaterialButton
            style="@style/Theme.Table.Widget.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_huge"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:layout_weight="1"
            android:text="Register" />

        <com.google.android.material.button.MaterialButton
            style="@style/Theme.Table.Widget.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_huge"
            android:layout_weight="1"
            android:text="Sign In" />

    </LinearLayout>

</LinearLayout>