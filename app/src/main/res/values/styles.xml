<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Table.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Theme.Ava.TextAppearance.Button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">@color/primary_button_bg</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">?attr/rippleColor</item>
    </style>

    <style name="Theme.Table.Widget.Button.Secondary">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Table.Widget.Button.Progressable" parent="Widget.MaterialComponents.CardView">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:indeterminateTint">?attr/colorOnPrimary</item>
        <item name="cardBackgroundColor">@color/primary_button_bg</item>
        <item name="cardCornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Theme.Ava.TextAppearance.Button</item>
    </style>

    <style name="Theme.Table.Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/input_field_min_height</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textCursorDrawable">@drawable/app_cursor</item>
        <item name="android:textAppearance">@style/Theme.Ava.TextAppearance.UI14R</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:textColorHint">@color/input_field_hint</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>